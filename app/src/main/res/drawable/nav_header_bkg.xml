<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:centerColor="#78909c"
                android:centerX="0"
                android:centerY="5"
                android:endColor="#6d4c41"
                android:startColor="#78909c"
                android:type="sweep" />
        </shape>
    </item>
    <item>
        <inset
            android:insetLeft="25dp"
            android:insetRight="-25dp"
            android:insetTop="20dp">
            <shape android:shape="rectangle">
                <solid android:color="#263238" />
                <corners android:radius="16dp" />
            </shape>
        </inset>
    </item>
    <item>
        <inset
            android:insetLeft="55dp"
            android:insetRight="-25dp"
            android:insetTop="20dp">
            <shape android:shape="rectangle">
                <solid android:color="#ff5722" />
                <corners android:radius="16dp" />
            </shape>

        </inset>
    </item>

    <item>
        <inset
            android:insetLeft="50dp"
            android:insetTop="20dp">
            <shape android:shape="rectangle">
                <solid android:color="#40c4ff" />
                <corners android:radius="16dp" />
            </shape>
        </inset>
    </item>


</layer-list>